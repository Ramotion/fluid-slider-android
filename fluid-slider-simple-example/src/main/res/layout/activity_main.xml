<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.ramotion.fluidslider.example.simple.MainActivity">

    <com.ramotion.fluidslider.FluidSlider
        android:id="@+id/fluidSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="42dp"
        android:ellipsize="end"
        android:text="@string/long_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/fluidSlider"
        app:layout_constraintEnd_toEndOf="@+id/fluidSlider"
        app:layout_constraintStart_toStartOf="@+id/fluidSlider"
        app:layout_constraintTop_toTopOf="@+id/fluidSlider"
        app:layout_constraintVertical_bias="0.0" />

    <com.ramotion.fluidslider.FluidSlider
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/fluidSlider"
        app:layout_constraintStart_toStartOf="@+id/fluidSlider"
        app:layout_constraintTop_toBottomOf="@+id/fluidSlider"
        app:size="small" />

</android.support.constraint.ConstraintLayout>
